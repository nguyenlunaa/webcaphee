
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Assets/Home/css/register.css">

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a href="index.html">Home</a> <span class="mx-2 mb-0"></div>
        </div>
    </div>
</div>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="mdi mdi-check-all mr-2"></i>
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="mdi mdi-check-all mr-2"></i>
        @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
<div class="site-section">
    <div class="container">
        <!--code-->
        <div class="container">
            <div class="row justify-content-around">
                <form action="~/DangKy/DangKyThanhVien" class="col-md-6 bg-light p-3 my-3" method="post">
                    <h1 class="text-center text-uppercase h3 py-3">Đăng Ký Thành Viên</h1>

                    <div class="form-group">
                        <label for="fullname">Tài Khoản</label>
                        <input type="text" name="TaiKhoan" id="fullname" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="fullname">Mật Khẩu</label>
                        <input type="password" name="MatKhau" id="fullname" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="fullname">Họ Và Tên</label>
                        <input type="text" name="HoTen" id="fullname" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="fullname">Địa Chỉ</label>
                        <input type="text" name="DiaChi" id="fullname" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="fullname">Email</label>
                        <input type="text" name="Email" id="fullname" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="fullname">Điện Thoại</label>
                        <input type="text" name="DienThoai" id="fullname" class="form-control" required>
                    </div>

                    <input type="submit" value="Đăng Ký" class="btn-primary btn btn-block">
                </form>
            </div>

        </div>
        <!--code-->
    </div>

