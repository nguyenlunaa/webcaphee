@model WebCafe.Models.GiamGia

@{
    ViewBag.Title = "SuaGiamGia";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form action="~/GiamGia/SuaGiamGia/@Model.MaGiamGia" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm-6">
            <input type="hidden" class="form-control" id="formrow-taikhoan-input" name="MaGiamGia" value="@Model.MaGiamGia" required>
            <div class="form-group">
                <label for="MaGiamGia">Mã Giảm Giá</label>
                <input id="MaGiamGia" name="TenSP" type="text" value="@Model.MaGiamGia" class="form-control">
            </div>
            <div class="form-group">
                <label for="TenMa">Tên mã</label>
                <input id="TenMa" name="TenMa" type="text" value="@Model.TenMa" class="form-control">
            </div>
            <div class="form-group">
                <label for="GiaTri">Giá Trị</label>
                <input id="GiaTri" name="GiaTri" type="number" value="@Model.GiaTri'" class="form-control">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <div class="custom-control custom-checkbox  custom-checkbox-success mb-3">
                    <input type="checkbox" class="custom-control-input" id="customCheckcolor2" name="active" value="true">
                    <label class="custom-control-label" for="customCheckcolor2">Chọn Mã Giảm Giá</label>
                </div>
            </div>
        </div>
    <br />
    <button type="submit" class="btn btn-primary mr-1 waves-effect waves-light">Sửa</button>
</form>

@section ClientScript{
    @*img upload*@
    <script src="~/Assets/admin/js/pages/upload_img.js"></script>
    <!--tinymce js-->
    <script src="~/Assets/admin/libs/tinymce/tinymce.min.js"></script>
    <!-- Summernote js -->
    <script src="~/Assets/admin/libs/summernote/summernote-bs4.min.js"></script>
    <script src="~/Assets/admin/libs/select2/js/select2.min.js"></script>
    <!-- init js -->
    <script src="~/Assets/admin/js/pages/form-editor.init.js"></script>
    <script src="~/Assets/admin/js/pages/form-advanced.init.js"></script>
}

